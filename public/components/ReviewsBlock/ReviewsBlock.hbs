<div class="reviews" id="reviews-{{type}}">
    <div class="reviews-inner">
        <div class="reviews-head">

            {{#if_eq type 'seller'}}
                <span class="reviews-head__title">Отзывы как о продавце</span>
            {{else}}
                <span class="reviews-head__title">Отзывы как о покупателе</span>
            {{/if_eq}}

            <div class="reviews-head-sort">
                <span>Сортировать по:</span>

                <label class="reviews-head-sort__label" for="reviews-seller-date">
                    <input class="reviews-head-sort__button" type="radio" value="date"
                           id="reviews-seller-date"
                           name="sort-seller" data-action="sortByDateClick">
                    дате
                </label>

                <label class="reviews-head-sort__label" for="reviews-seller-rate">
                    <input class="reviews-head-sort__button" type="radio" value="rate"
                           id="reviews-seller-rate"
                           name="sort-seller" data-action="sortByRateClick">
                    рейтингу
                </label>
            </div>

            <div class="reviews-head__separator"></div>
        </div>

        <div class="reviews-body" id="reviews-{{type}}-scroll">
            <div class="reviews-body-inner" id="reviews-{{type}}-body"></div>
        </div>
    </div>
</div>