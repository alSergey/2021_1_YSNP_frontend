<div class="tariffs-block tariffs-block_unchecked" id={{idBlock}}>
    <div class="tariffs-block-body">
        <div class="tariffs-block__title">Тариф</div>
        <div class="tariffs-block__type">{{name}}</div>
        <div class="tariffs-block-description">
            <ul class="tariffs-block-description__list">
                {{#each description}}
                    <li class="tariffs-block-description__item">{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="tariffs-block-footer">
        <div class="tariffs-block__price">
            <label for="tariff-price">{{price}} ₽</label>
            <input type="number" id="{{idPrice}}" hidden value="{{price}}">
        </div>
        <div class="tariffs-block__button">
            <button class="tariffs-block__button_unchecked" id={{idButton}} data-action="{{action}}">Выбрать</button>
        </div>
    </div>
</div>