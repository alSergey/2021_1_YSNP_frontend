<div class="tariffs-block_unchecked" id={{idBlock}}>
    <div class="tariffs-block__title">Тариф</div>
    <div class="tariffs-block__type">{{name}}</div>
    <div class="tariffs-block__description">
        <ul>
            {{#each description}}
                <li class="tariffs_description__list">{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="tariffs-block__price">
        <label for="tariff-price">{{price}} ₽</label>
        <input type="number" id="{{idPrice}}" hidden value="{{price}}">
    </div>
    <div class="tariffs-block__button">
        <button class="tariffs__button_unchecked" id={{idButton}} data-action="{{action}}">Выбрать</button>
    </div>
</div>